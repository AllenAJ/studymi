{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/transcript/:videoId",
      "destination": "/api/transcript?v=:videoId"
    },
    {
      "source": "/privacy",
      "destination": "/index.html"
    },
    {
      "source": "/terms",
      "destination": "/index.html"
    },
    {
      "source": "/disclaimer",
      "destination": "/index.html"
    },
    {
      "source": "/refund",
      "destination": "/index.html"
    },
    {
      "source": "/pricing",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/transcript.ts": {
      "memory": 256,
      "maxDuration": 30
    },
    "api/generate.ts": {
      "memory": 256,
      "maxDuration": 60
    },
    "api/gemini.ts": {
      "memory": 512,
      "maxDuration": 60
    }
  }
}